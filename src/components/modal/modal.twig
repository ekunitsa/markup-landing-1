  },
  {
    'imgname': 'img2',
    'text': 'Loft Kitchens'
  },
  {
    'imgname': 'img3',
    'text': 'Classic Style'
  },
  {
    'imgname': 'img4',
    'text': 'Other'
  },
]
%}
{% set kitchenForms = [
  {
    'imgname': 'form1',
    'text': 'Straight Kitchen'
  },
  {
    'imgname': 'form2',
    'text': 'Corner kitchen'
  },
  {
    'imgname': 'form3',
    'text': 'U-shaped kitchen'
  },
  {
    'imgname': 'form4',
    'text': 'Parallel kitchen'
  },
  {
    'imgname': 'form5',
    'text': 'Kitchen with an island'
  },
  {
    'imgname': 'form6',
    'text': 'Other forms'
  },
]
